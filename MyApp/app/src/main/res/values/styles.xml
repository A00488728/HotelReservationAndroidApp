<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name="backgroundTint">#00ACC1</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="fontFamily">casual</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:text">Book With Us</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#323D3E</item>
        <item name="android:textSize">50sp</item>  <!-- Set your hint text size -->
        <item name="android:fontFamily">cursive</item>  <!-- Set your custom font -->
    </style>
    <style name="Header2TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>  <!-- Set your hint text size -->
        <item name="android:fontFamily">serif</item>  <!-- Set your custom font -->
    </style>
    <style name="HintTextStyle">
        <item name="android:textColorHint">#CECECE</item>  <!-- Set your hint color here -->
        <item name="android:textSize">15sp</item>  <!-- Set your hint text size -->
        <item name="android:fontFamily">serif</item>  <!-- Set your custom font -->
    </style>

    <style name="DisplayText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
    </style>



</resources>